@model IEnumerable<OrderManagementSystem.UI.Models.UserWithRoleViewModel>

@{
    ViewData["Title"] = "Menaxho Përdoruesit";
}

<h1 class="text-center my-4">Menaxho Përdoruesit</h1>

<div class="d-flex justify-content-between mb-4">
    <h2 class="text-secondary">Lista e Përdoruesve</h2>
    <a asp-action="Register" class="btn btn-success">Shto përdorues</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover shadow-lg">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Roli</th>
                <th class="text-center">Veprime</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td class="align-middle">@user.Email</td>
                    <td class="align-middle">@user.Role</td>
                    <td class="text-center align-middle">
                        <form asp-action="Delete" method="post" asp-route-id="@user.Id" class="d-inline-block" onsubmit="return confirm('A jeni i sigurt?');">
                            <button type="submit" class="btn btn-outline-danger btn-sm px-4">Fshij</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
